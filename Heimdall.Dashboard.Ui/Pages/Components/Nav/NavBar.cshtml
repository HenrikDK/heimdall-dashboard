<script type="module">
import { useRoute } from 'vue-router'
import {useDark, useToggle} from "@@vueuse/core";
import {ref, onMounted, watch, computed} from 'vue';

let setup = (props, ctx) => {
  const route = useRoute();
  const isDark = useDark();
  const toggleDark = useToggle(isDark);
    
  const nsVisible = computed(() => {
    let visible = true;
    if (route.path.endsWith('/logs'))
      visible = false;
    if (route.path.endsWith('/details'))
      visible = false;
    return visible
  })
  
  const searchVisible = computed(() => {
    let visible = true;
    if (route.path === '/')
      visible = false;
    if (route.path.endsWith('/logs'))
      visible = false;    
    if (route.path.endsWith('/details'))
      visible = false;
    return visible
  })
  
  const logSearchVisible = computed(() => {
    let visible = false;
    if (route.path.endsWith('/logs'))
      visible = true;
    return visible
  })
      
  return {
    nsVisible, searchVisible, logSearchVisible, 
    isDark, toggleDark
  }
}

components["nav-bar"] = { template: "#nav-bar", props:['namespaces'], setup };
</script>
