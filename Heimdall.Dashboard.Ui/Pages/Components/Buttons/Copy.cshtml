        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" :class="size">
          <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
        </svg>
      </div>
      <div class="ms-1 py-0.5 px-1 rounded bg-gray-200 dark:bg-zinc-900 absolute translate-x-8">
        Copied!
      </div>    
    </div>
  </div>
  <div v-else @@click="copyContent" class="pt-1 fill-green cursor-pointer">
    <div class="flex items-center py-1 px-1 rounded
    hover:border-sky-500 hover:text-sky-500 hover:bg-gray-200
    dark:hover:border-blue-400 dark:hover:text-blue-400 dark:hover:bg-zinc-900">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" :class="size">
