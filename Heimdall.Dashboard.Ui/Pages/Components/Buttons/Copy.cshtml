</template>

<script type="module">
import { ref } from 'vue'

let setup = (props, ctx) => {  
  let copied = ref(false);
  let handle = null;
  
  let copyContent = () => {
    copied.value = true;
    props.action();
    handle = setInterval(clearStatus, 1500);
  }
  
  let clearStatus = () => {
    copied.value = false;
    clearInterval(handle)
  }
 
  return { copied, copyContent, clearStatus }
}

components["copy-btn"] = { template: "#copy-btn", setup,
  props: {
    action: {
      type: Function,
      required: true,
    },
    title: {
        type: String,
        required: false,
        default: 'Copy to clipboard'
    },
    size: {
        type: String,
        required: false,
        default: 'h-5 w-5'
    },
  }};
</script>
